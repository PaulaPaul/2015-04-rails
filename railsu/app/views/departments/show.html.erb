<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Department Details</h3>
  </div>
  <div class="panel-body">
    <div>
      <dl class="dl-horizontal">
		<dt>Dept Name</dt>
        <dd><%= @department.name %></dd>
		<dt>Dept Budget</dt>
        <dd><%= @department.budget %></dd>		
        <dt>Dept Created</dt>
        <dd><%= @department.start_date %></dd>
        <dt>Dept Administrator</dt>
        <dd><%= @department.instructor.last_name %></dd>
      </dl>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to 'Edit', edit_department_path(@department),:class => "btn-primary btn-sm" %>  
    <%= link_to 'Back', departments_path,:class => "btn-primary btn-sm" %>
  </div>
</div>
