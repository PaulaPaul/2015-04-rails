<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Artists</h3>
  </div>
  <div class="panel-body">

  <table class="table">
    <thead>
      <tr class="row">
        <th>Name</th>
        <th>Genre</th>
        <th colspan=3></th>
      </tr>
    </thead>
    <tbody>
      <% @artists.each do |artist| %>
        <tr class="row">
          <td><%= artist.name %></td>
          <td><%= artist.genre.name %></td>
          <td><%= link_to 'Show', artist, :class => "btn-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_artist_path(artist), :class => "btn-primary btn-sm" %></td>
          <td><%= link_to 'Destroy', artist, :class => "btn-warning btn-sm", method: :delete,                                             data: {confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </tbody> 
  </table>
  </div>
  <div class="panel-footer"><%= link_to 'New Artist', new_artist_path,:class => "btn-primary btn-sm"  %></div>
</div>

