<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Genres</h3>
  </div>
  <div class="panel-body">
  <table class="table">
    <thead>
      <tr class="row">
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr  class="row">
          <td><%= genre.name %></td>
          <td><%= link_to 'Show', genre,:class => "btn-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_genre_path(genre),:class => "btn-primary btn-sm" %></td>
          <td><%= link_to 'Destroy', genre, :class => "btn-warning btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  <div class="panel-footer"><%= link_to 'New Genre', new_genre_path,:class => "btn-primary btn-sm"  %></div>
</div>
  
