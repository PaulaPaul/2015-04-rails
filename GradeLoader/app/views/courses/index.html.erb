<p id="notice"><%= notice %></p>

<h1>Listing Courses</h1>

<p> 
<%= link_to "Download CSV", courses_path(format: "csv") %>  |  
<%= link_to "Download XLS", courses_path(format: "xls") %>  |
<%= link_to "JSON API", courses_path(format: "json") %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Credits</th>
      <th>Term</th>
      <th>Instructor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.credits %></td>
        <td><%= course.term %></td>
        <td><%= course.instructor %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
